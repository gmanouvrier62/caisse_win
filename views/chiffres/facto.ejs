        fen.document.body.style.padding = "20px";
        
        // Ajout des données a imprimer
        fen.document.title = "ACHATS";
        fen.document.body.innerHTML += " " + content + " ";
        
        // Impression du popup
        fen.window.print();
        
        //Fermeture du popup
        fen.window.close();
        return true;
    

